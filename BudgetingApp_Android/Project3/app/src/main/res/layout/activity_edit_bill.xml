<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs402.project3.EditBillActivity">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="577dp"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-4dp">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="146dp"
            android:text="New Bill Name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp" />

        <EditText
            android:id="@+id/newBillName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="34dp"
            android:ems="9"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/saveButton2"
            android:layout_toEndOf="@+id/saveButton2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="New Bill Amount"
            android:layout_below="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6" />

        <EditText
            android:id="@+id/newBillAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="34dp"
            android:ems="9"
            android:layout_below="@+id/newBillName"
            android:layout_alignLeft="@+id/newBillName"
            android:layout_alignStart="@+id/newBillName" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="22dp"
            android:text="New Due Date" />

        <EditText
            android:id="@+id/newBillDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/newBillAmount"
            android:layout_alignStart="@+id/newBillAmount"
            android:layout_below="@+id/newBillAmount"
            android:ems="9"
            android:inputType="textPersonName"
            android:text="Select Date..."
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="34dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView8"
            android:layout_alignRight="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="25dp"
            android:text="New Reminder Date" />

        <EditText
            android:id="@+id/newBillReminderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/newBillDueDate"
            android:layout_alignStart="@+id/newBillDueDate"
            android:layout_below="@+id/newBillDueDate"
            android:ems="9"
            android:inputType="textPersonName"
            android:text="Select Date..."
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="34dp" />

        <Button
            android:id="@+id/saveButton2"
            android:layout_width="114dp"
            android:layout_height="75dp"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="95dp"
            android:text="Save" />

        <Button
            android:id="@+id/resetButton2"
            android:layout_width="114dp"
            android:layout_height="75dp"
            android:text="Reset"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignBottom="@+id/saveButton2"
            android:layout_alignRight="@+id/newBillReminderDate"
            android:layout_alignEnd="@+id/newBillReminderDate" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/newBillName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:text="Edit Bill"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

