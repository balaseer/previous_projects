<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs402.project3.ProjectionsActivity">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="577dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-3dp">

        <EditText
            android:id="@+id/enterPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="224dp"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="106dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/enterUserName"
            android:layout_alignStart="@+id/enterUserName" />

        <EditText
            android:id="@+id/enterUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="63dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="51dp"
            android:layout_above="@+id/password"
            android:layout_alignRight="@+id/notRegistered"
            android:layout_alignEnd="@+id/notRegistered"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="77dp"
            android:layout_alignBottom="@+id/enterUserName"
            android:layout_alignRight="@+id/password"
            android:layout_alignEnd="@+id/password" />

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/enterPassword"
            android:layout_alignLeft="@+id/login"
            android:layout_alignStart="@+id/login"
            android:text="Password"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="130dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="114dp"
            android:layout_height="75dp"
            android:layout_alignBottom="@+id/notRegistered"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:text="Login"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="190dp" />

        <Button
            android:id="@+id/notRegistered"
            android:layout_width="114dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/enterUserName"
            android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="102dp"
            android:text="Register"
            tools:layout_editor_absoluteX="245dp"
            tools:layout_editor_absoluteY="190dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
