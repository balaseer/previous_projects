<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs402.project3.SalaryActivity">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="577dp"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-4dp">

    <TextView
        android:id="@+id/salaryQuestionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What Is Your Monthly Salary?"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="114dp"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/userSalary"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/userSalary"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="176dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/finishButtonSalary"
        android:layout_width="114dp"
        android:layout_height="75dp"
        android:text="finish"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="308dp"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/userSalary"
        android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
